<% layout("/layouts/boilerplate") %>

<div class="row mt-2">
  <div class="col-8 offset-2">
    <h3><%= listing.title %></h3>
  </div>

  <div class="col-8 offset-2">
    <div class="card">
      <img src="<%= listing.image %>" class="card-img-top show-image" alt="Listing image">
      <div class="card-body">
        <p><strong>Owned by:</strong> <%= listing.owner?.username || "Unknown" %></p>
        <p class="card-text"><strong>Description:</strong> <%= listing.description %></p>
        <ul class="list-group list-group-flush">
          <li class="list-group-item">Price: ‚Çπ<%= listing.price.toLocaleString("en-IN") %></li>
          <li class="list-group-item">Location: <%= listing.location %></li>
          <li class="list-group-item">Country: <%= listing.country %></li>
        </ul>
      </div>

      <% if (currUser && listing.owner && listing.owner._id.equals(currUser._id)) { %>
        <div class="card-body">
          <a href="/listings/<%= listing._id %>/edit" class="btn btn-primary">Edit this listing</a>
          <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE" class="d-inline">
            <button class="btn btn-danger">Delete</button>
          </form>
        </div>
      <% } %>

    </div>
  </div>

  <% if (currUser) { %>
    <div class="col-8 offset-2 mb-4 mt-3">
      <hr>
      <h4>Leave a Review</h4>
      <form novalidate class="needs-validation" action="/listings/<%= listing._id %>/review" method="POST">
        <div class="mb-3">
          <label for="rating" class="form-label">Rating</label>
          <input type="range" max="5" min="1" id="rating" name="review[rating]">
        </div>
        <div class="mb-3">
          <label for="comments" class="form-label">Comments</label>
          <textarea name="review[comments]" id="comments" cols="30" rows="5" class="form-control" required></textarea>
          <div class="invalid-feedback">
            Please write a review comment.
          </div>
        </div>
        <button class="btn btn-dark">Submit</button>
      </form>
    </div>
  <% } %>

  <div class="col-8 offset-2">
    <hr>
    <h4 class="mt-5 mb-3 text-primary">All Reviews</h4>

    <ul class="list-group">
      <% for (let review of listing.reviews) { %>
        <li class="list-group-item shadow-sm rounded mb-2">
          <div class="d-flex justify-content-between flex-column flex-md-row">
            <div>
              <p class="mb-1">
                <strong>‚≠ê Rating:</strong> <%= review.rating %>
              </p>
              <p class="mb-1">
                <strong>üìù Comments:</strong> <%= review.comments %>
              </p>
         <strong>Author:</strong> <%= review.author ? review.author.username : 'Anonymous' %>
            </div>

            <% if (currUser && review.author && review.author._id.equals(currUser._id)) { %>
              <form method="POST" action="/listings/<%= listing._id %>/review/<%= review._id %>?_method=DELETE">
                <button type="submit" class="btn btn-outline-danger btn-sm mt-2 mt-md-0">
                  <i class="bi bi-trash"></i> Delete
                </button>
              </form>
            <% } %>
          </div>
        </li>
      <% } %>
    </ul>
  </div>
</div>
